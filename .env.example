# Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===========================================
# JWT Configuration (REQUIRED)
# ===========================================
# Minimum 32 characters for HS256 algorithm
JWT_SECRET_KEY=your-super-secret-key-here-minimum-32-characters-long

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL connection string
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=NetAuth
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password

# Full connection string (alternative to individual settings)
# DATABASE_CONNECTION_STRING=Host=localhost;Port=5432;Database=NetAuth;Username=postgres;Password=your-password

# ===========================================
# Redis Configuration
# ===========================================
REDIS_CONNECTION_STRING=localhost:6379

# ===========================================
# Logging (Optional)
# ===========================================
# Seq logging server URL
SEQ_SERVER_URL=http://localhost:5341

# ===========================================
# Docker Compose Usage
# ===========================================
# When using docker-compose, these variables are automatically loaded from .env
# Example docker-compose.yml:
#
# services:
#   netauth:
#     environment:
#       - Jwt__SecretKey=${JWT_SECRET_KEY}
#       - ConnectionStrings__Database=Host=${DATABASE_HOST};Port=${DATABASE_PORT};Database=${DATABASE_NAME};Username=${DATABASE_USER};Password=${DATABASE_PASSWORD}
#       - ConnectionStrings__Redis=${REDIS_CONNECTION_STRING}

